<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Programming">

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias alias="ProgrammingVO" type="egovframework.example.sample.service.ProgrammingVO"/>
	
	<resultMap id="programming" class="ProgrammingVO">
		<result property="pno" column="pno"/>
		<result property="writer" column="writer"/>
		<result property="subject" column="subject"/>
		<result property="contents" column="contents"/>
		<result property="nowdate" column="nowdate"/>
	</resultMap>

	<insert id="programmingDAO.insertProgramming" parameterClass="ProgrammingVO">

			INSERT INTO PROGRAMMING
				( PNO
				  , WRITER
				  , SUBJECT
				  , CONTENTS 
				  , NOWDATE )
			VALUES ( #pno#
				  , #writer#
				  , #subject#
				  , #contents#
				  , #nowdate# )

	</insert>

	<update id="programmingDAO.updateProgramming">

			UPDATE PROGRAMMING
			SET PNO=#pno#
				, WRITER=#writer#
				, SUBJECT=#description#
				, CONTENTS=#useYn#
				, NOWDATE=#nowdate#
				  WHERE PNO=#pno#

	</update>

	<delete id="programmingDAO.deleteProgramming">

			DELETE FROM PROGRAMMING
			WHERE PNO=#pno#

	</delete>

	<select id="programmingDAO.selectProgramming" resultClass="programming">

			SELECT
				PNO, WRITER, SUBJECT, CONTENTS, NOWDATE
			FROM PROGRAMMING
			WHERE PNO=#pno#

	</select>

	<select id="programmingDAO.selectProgrammingList" parameterClass="ProgrammingVO" resultClass="egovMap">

			SELECT
				PNO, WRITER, SUBJECT, CONTENTS, NOWDATE
			FROM PROGRAMMING
			ORDER BY PNO ASC
	</select>

</sqlMap>